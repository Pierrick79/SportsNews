<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/news_blue</item>
        <item name="colorPrimaryDark">@color/news_dark_blue</item>
    </style>

    <style name="ForecastTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.News.NoTitle</item>
    </style>

    <style name="ActionBar.Solid.News.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions" >useLogo|showHome|showTitle</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>

    <style name="SettingsTheme" parent="AppTheme"></style>

    <style name="ForecastListStyle"></style>

</resources>
